<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="ICU.Planner.Controls.CpaxPropertyView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ICU.Planner.Controls"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:Name="this">

    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,1*,1*">

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            FontFamily="RM"
            Text="{Binding HeaderValue, Source={Reference this}}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Text="Current" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="Goal"
            VerticalOptions="Center"
            VerticalTextAlignment="Center" />

        <controls:CpaxRadioButtonsView
            Grid.Row="1"
            Grid.Column="1"
            Value="{Binding CurrentValue, Source={Reference this}}" />

        <controls:CpaxRadioButtonsView
            Grid.Row="2"
            Grid.Column="1"
            Value="{Binding GoalValue, Source={Reference this}}" />

    </Grid>

</ContentView>